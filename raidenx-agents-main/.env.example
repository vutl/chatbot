#===========================================
# RaidenX API Configuration
#===========================================

# Base URL for common RaidenX API endpoints
# Used for general purpose API calls
RAIDENX_API_COMMON_URL=https://api.dextrade.bot

# URL for market insight and analytics
# Used for retrieving market data, trends, and analysis
RAIDENX_API_INSIGHT_URL=https://api-insight.dextrade.bot

# URL for order management
# Handles order creation, modification, and cancellation
RAIDENX_API_ORDERS_URL=https://api-orders.dextrade.bot

# URL for wallet operations
# Manages wallet balances, transactions, and token holdings
RAIDENX_API_WALLETS_URL=https://api-wallets.dextrade.bot

#===========================================
# AgentFai Configuration
#===========================================

# Base URL for AgentFai API
# Used for AI agent communication and processing
AGENTFAI_API_URL=https://api-agentfai.dextrade.bot

# API key for AgentFai authentication
# Required for accessing AgentFai services
# Format: 32-character hexadecimal string
AGENTFAI_API_KEY=your_api_key_here

#===========================================
# LLM API Configuration
#===========================================

# Anthropic Claude API key
# Required for accessing Claude's AI capabilities
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# DeepSeek API key
# Used for advanced language processing tasks
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Google Gemini API key
# Required for accessing Gemini Pro features
GEMINI_API_KEY=your_gemini_api_key_here

#===========================================
# Security Configuration
#===========================================

# JWT secret key for token generation and validation
# Must be at least 32 characters long
# Example: use `openssl rand -hex 32` to generate
SECRET_KEY=your_secure_secret_key_here

# JWT token expiration time in minutes
JWT_EXPIRE_MINUTES=60

#===========================================
# Application Configuration
#===========================================

# Debug mode (true/false)
# Enable for development, disable in production
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Maximum requests per minute per user
RATE_LIMIT=100

#===========================================
# Webhook Configuration
#===========================================

# Webhook secret for signature validation
WEBHOOK_SECRET=your_webhook_secret_here

# Webhook retry attempts
WEBHOOK_MAX_RETRIES=3

# Webhook timeout in seconds
WEBHOOK_TIMEOUT=30

#===========================================
# Monitoring Configuration
#===========================================

# Telegram notification settings
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn

#===========================================
# Feature Flags
#===========================================

# Enable/disable streaming responses
ENABLE_STREAMING=true

# Enable/disable webhook notifications
ENABLE_WEBHOOKS=true

# Enable/disable rate limiting
ENABLE_RATE_LIMIT=true

# Enable/disable automatic error reporting
ENABLE_ERROR_REPORTING=true